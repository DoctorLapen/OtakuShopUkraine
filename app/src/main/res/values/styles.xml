<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="OtakuTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E800DF</item>
        <item name="colorPrimaryDark">#9C27B0</item>
        <item name="colorAccent">#535253</item>
        <item name="android:textColor">#535253</item>
        <item name="fontFamily">@font/gnyrwn971</item>

    </style>
    <style name="SplashScreenTheme" parent="OtakuTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
